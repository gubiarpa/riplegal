
@{
    ViewData["Title"] = "Index";
}


<table id="example" class="table @*table-striped*@ table-hover" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Start date</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 10000; i++)
        {
            var edad = new Random().Next(18, 70);
            <tr>
                <td>Tiger Nixon</td>
                <td>System Architect</td>
                <td>Edinburgh</td>
                <td>@edad</td>
                <td>@DateTime.Now.AddDays(-new Random().Next(edad))</td>
                <td>$320,800</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Start date</th>
            <th>Salary</th>
        </tr>
    </tfoot>
</table>
@section scripts {
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}
